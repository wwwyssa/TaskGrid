# ================================================
# TaskGrid - Environment Configuration Template
# ================================================
# Copie este archivo a .env y configure los valores
# cp .env.example .env

# ================================================
# Database Configuration
# ================================================
POSTGRES_DB=taskgrid_db
POSTGRES_USER=taskgrid_user
POSTGRES_PASSWORD=taskgrid_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ================================================
# Backend Configuration (Spring Boot)
# ================================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/taskgrid_db
SPRING_DATASOURCE_USERNAME=taskgrid_user
SPRING_DATASOURCE_PASSWORD=taskgrid_pass

# Estrategia de Hibernate para la BD
# Opciones: create | create-drop | update | validate
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# ================================================
# JWT Configuration
# ================================================
# IMPORTANTE: Cambiar en producci√≥n con una clave segura
# Generar con: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-very-long-secret-key-for-security

# JWT Expiration en milisegundos
# 86400000 = 24 horas
JWT_EXPIRATION=86400000

# ================================================
# Spring Configuration
# ================================================
SPRING_PROFILES_ACTIVE=prod

# ================================================
# Frontend Configuration
# ================================================
ANGULAR_API_URL=http://localhost:8080/api
ANGULAR_WS_URL=ws://localhost:8080/api/ws/tickets

# ================================================
# Server Configuration
# ================================================
SERVER_PORT=8080

# ================================================
# Logging
# ================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_TASKGRID=DEBUG
